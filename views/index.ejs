<!DOCTYPE html>
<html lang="en">
<head>
  <title>HexEmpireAI</title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
  <script src="/js/jquery-3.5.1.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <style>
    .gamelog {
      overflow-y: scroll;
      width: 800px;
      height: 600px;
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <form class="form-inline">
          <div class="form-group">
            <label for="mapNumber" class="sr-only">Map #</label>
            <input type="text" class="form-control-plaintext" id="mapNumberInput" placeholder="Enter map number, ex. 999999">
          </div>
          <button type="button" class="btn btn-primary" id="changeMapButton">Change Map</button>
          <button type="button" class="btn btn-primary" id="randomMapButton">Random Map</button>
          <button type="button" class="btn btn-success" id="startBattleButton">Start Battle</button>
        </form>

      </div>
      <div class="col-sm-12">
        <div id="mapStatus"><b>Map</b> , <b>Turn</b> 1</div>
        <canvas id="map" width="800" height="600"></canvas>
      </div>
      <div class="col-sm-12">
        <div id="accordion">
          <div class="card">
            <div class="card-header" id="headingGameLog">
              <h2 class="mb-0">
                <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseGameLog" aria-expanded="false">
                  Game Log
                </button>
              </h2>
            </div>
            <div id="collapseGameLog" class="collapse" aria-labelledby="headingGameLog" data-parent="#accordion">
              <div class="card-body">
                <div id="gamelog"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="/game/Main.js" type="module"></script>
</body>
</html>
