<!DOCTYPE html>
<html lang="en">
<head>
  <title>HexEmpireAI</title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
  <script src="/js/jquery-3.5.1.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <style>
    .gamelog {
      overflow-y: scroll;
      width: 800px;
      height: 600px;
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <form class="form-inline">
          <div class="form-group">
            <label for="mapNumber" class="sr-only">Map #</label>
            <input type="text" class="form-control-plaintext" id="mapNumberInput" placeholder="Enter map number, ex. 999999">
          </div>
          <button type="button" class="btn btn-primary" id="changeMapButton">Change Map</button>
          <button type="button" class="btn btn-primary" id="randomMapButton">Random Map</button>
          <button type="button" class="btn btn-success" id="startBattleButton">Start Battle</button>
          <button type="button" class="btn btn-warning" id="endTurnButton" style="display:none;">End Turn</button>
        </form>

      </div>
      <div class="col-sm-12">
        <div id="mapStatus"><b>Map</b> , <b>Turn</b> 1</div>
        <canvas id="map" width="800" height="600"></canvas>
      </div>
      <div class="col-sm-12">
        <!-- Country Selection Modal -->
        <div class="modal fade" id="countrySelectModal" tabindex="-1" role="dialog" aria-labelledby="countrySelectModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="countrySelectModalLabel">Choose Your Country</h5>
              </div>
              <div class="modal-body">
                <p>Select a country to lead to victory:</p>
                <div class="d-flex justify-content-around">
                  <button type="button" class="btn btn-danger country-select" data-country="0">Redosia</button>
                  <button type="button" class="btn btn-secondary country-select" style="background-color: violet; border-color: violet;" data-country="1">Violetnam</button>
                  <button type="button" class="btn btn-primary country-select" data-country="2">Bluegaria</button>
                  <button type="button" class="btn btn-success country-select" data-country="3">Greenland</button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div id="accordion">
          <div class="card">
            <div class="card-header" id="headingGameLog">
              <h2 class="mb-0">
                <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseGameLog" aria-expanded="false">
                  Game Log
                </button>
              </h2>
            </div>
            <div id="collapseGameLog" class="collapse" aria-labelledby="headingGameLog" data-parent="#accordion">
              <div class="card-body">
                <div id="gamelog"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="/game/Main.js" type="module"></script>
</body>
</html>
